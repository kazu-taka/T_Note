<h1>投稿一覧</h1>
<div class="col-lg-6">
    <%= link_to '投稿する', new_school_path, class: "btn btn-default pull-right" %>
  </div>
<table class="table table-striped">
    <thead>
      <th>タイトル</th>
      <th>名前</th>
      <th>教員歴</th>
      <th>役職</th>
    </thead>
    <tbody>
      <% @schools.each do |school| %>
        <tr>
          <td><%= school.title %></td>
          <td><%= school.name %></td>
          <td><%= school.career %></td>
          <td><%= school.post.position_name %></td>
          <td><%= link_to '詳細', school, class: "btn btn-default btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% @schools.each do |school| %>
<% end %>
