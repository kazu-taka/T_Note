<div class="row">
  <div class="col-lg-12">
<h1>投稿更新フォーム</h1>

</div>
</div>
<%= form_with model: @school, local: true do |form| %>

<div class="form-group">
    <%= form.label :title , "タイトル"%><br>
    <%= form.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
    <%= form.label :name, "氏名" %><br>
    <%= form.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
    <%= form.label :gakko, "性別" %><br>
    <%= form.text_field :gakko, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= form.label :career,"教員歴" %><br>
      <%= form.number_field :career, class: "form-control" %>
    </div>

<div class="form-group">
    <%= form.label :post_id,"役職" %>
    <%= form.collection_select :post_id, Post.all, :id, :position_name, { include_blank: "役職を選択してください" }, { class: "form-control" } %>
  </div>
  <div class="form-group">
      <%= form.label :content, "内容" %><br>
      <%= form.text_area :content, class: "form-control" %>
    </div>
<%= form.submit "更新" %>
<% end %>
